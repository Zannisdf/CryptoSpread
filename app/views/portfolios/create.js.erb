$followBtn = $('#<%= @portfolio.coin_id %> .follow');
$followBtn.html(function(){
  if(<%= @portfolio.follow %>){
    return "<i class='fas fa-minus'></i>"
  } else {
    return "<i class='fas fa-plus'></i>"
  }
})
<% action = @portfolio.follow ? 'added to' : 'removed from' %>
$('.alert-box').prepend('<%= j render 'shared/alert', message: "#{@portfolio.coin.name} #{action} your portfolio." %>')
var scroll = $(window).scrollTop();
if (scroll > 56){
  $('#alert').offset({top: scroll})
}
removeAlert();