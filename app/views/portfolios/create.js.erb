$followBtn = $('#<%= @portfolio.coin_id %> .follow');
$followBtn.toggleClass('btn-outline-warning');
$followBtn.toggleClass('btn-warning');
$followBtn.html(function(){
  if(<%= @portfolio.follow %>){
    return "<i class='fas fa-minus'></i>"
  } else {
    return "<i class='fas fa-plus'></i>"
  }
})
<% action = @portfolio.follow ? 'added to' : 'removed from' %>
$('body').append('<%= j render 'shared/alert', message: "#{@portfolio.coin.name} #{action} your portfolio." %>')
removeAlert();