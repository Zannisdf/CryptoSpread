<div id="<%= comment.id %>" class="card">
  <div class="card-body">
    <p><%= comment.content %></p>
    <% if can? :update, comment %>
      <div class="actions">
        <%= link_to 'Edit', edit_comment_path(comment), data: { remote: true } %>
        <%= link_to 'Delete', comment_path(comment), class: "delete", name: comment.id %>
      </div>
    <% end %>
  </div>
</div>