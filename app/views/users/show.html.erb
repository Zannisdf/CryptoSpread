<div id="<%= @user.id %>" class="d-flex justify-content-between align-items-center">
  <h3>
    <%= @user.name %> (<%= @user.role %> banned for <span class="ban-number"><%= pluralize(@user.ban, 'day') %></span>)
  </h3>
    <%= link_to 'Ban User', edit_user_path(@user), class: 'btn btn-warning btn-sm', data: { remote: true } %>
</div>
<h5><%= @user.email %></h5>
<div class="comments-container">
  <%= render @user.comments %>
</div>

<%= render 'shared/modal' %>