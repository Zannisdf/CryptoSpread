<tr id="<%= coin.id %>">
  <td>
    <% if can? :create, Portfolio %>
        <% if followed?(coin) %>
          <%= link_to coin_portfolios_path(coin), class: 'follow', data: { remote:true, method: :post } do %>
            <i class='fas fa-minus'></i>
          <% end %>
        <% else %>
          <%= link_to coin_portfolios_path(coin), class: 'follow', data: { remote:true, method: :post } do %>
            <i class="fas fa-plus"></i>
          <% end %>
        <% end %>
      <% end %>
      <%= image_tag "#{coin.name.downcase}.png" %>
      <%= link_to coin.name, coin_path(coin) %>
  </td>
  <td class="text-right align-middle">
    <%= number_to_currency(coin.price, precision: 3) %>
  </td>
  <td class="text-right align-middle">
    <%= coin.spread(coin.markets.uniq) %>%
  </td>
  <td class="price text-right align-middle">
    <%= coin.price_change(time_frame) %>%
  </td>
</tr>